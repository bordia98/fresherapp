<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.bordia98.firstyearnitk.pheonix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pheonix - NITK"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/pheonix1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="PHOENIX, the annual sports meet organized at institute level. This adventuring sporting event organized by the hostellers. It held in the second semester. If you are interested in sports pheonix is the best chance to showcase your talent. All the best for this  :-)"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/pheonix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/pheonix2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/pheonix3"/>

    </LinearLayout>
</ScrollView>
